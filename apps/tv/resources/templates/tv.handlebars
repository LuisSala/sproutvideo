<div class="container container_3">

<div class="grid_1">

<h1 class="logo">SproutTV</h1>
<div>SCHEDULE</div>
</div>
<div class="grid_2">
    FEATURED
</div>
<div class='clear'>&nbsp;</div>

<div id="playlist">
{{#collection "Tv.VideoListView" class="video-list" itemClass="video-item"}}
    <div class='grid_1'>
        {{view "Tv.VideoPlayer" videoUrl=content.url previewUrl=content.previewUrl}}
    </div>
    <div class='grid_2'>
        <p class="video-title">{{content.title}}</p>
        <p class="video-description">{{content.description}}</p>
    </div>
    <div class='clear'>&nbsp;</div>
{{/collection}}
</div>
</div>
